<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="fdc_demo_provider"/>

    <dubbo:registry protocol="zookeeper" address="localhost:2181" client="zkclient"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.hejun.demo.service.inter.service.sitemanager.ArticleService" ref="articleService" retries="1" timeout="6000"/>
    <dubbo:service interface="com.hejun.demo.service.inter.service.sitemanager.ArticleContentService" ref="articleContentService" retries="1" timeout="6000"/>
    <dubbo:service interface="com.hejun.demo.service.inter.service.sitemanager.ArticleTagService" ref="articleTagService" retries="1" timeout="6000"/>
    <dubbo:service interface="com.hejun.demo.service.inter.service.sitemanager.TagStoreService" ref="tagStoreService" retries="1" timeout="6000"/>
    <dubbo:service interface="com.hejun.demo.service.inter.service.sitemanager.WebsiteSpiderService" ref="websiteSpiderService" retries="1" timeout="6000"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="articleService" class="com.hejun.demo.service.impl.sitemanager.ArticleServiceImpl" />
    <bean id="articleContentService" class="com.hejun.demo.service.impl.sitemanager.ArticleContentServiceImpl" />
    <bean id="articleTagService" class="com.hejun.demo.service.impl.sitemanager.ArticleTagServiceImpl" />
    <bean id="tagStoreService" class="com.hejun.demo.service.impl.sitemanager.TagStoreServiceImpl" />
    <bean id="websiteSpiderService" class="com.hejun.demo.service.impl.sitemanager.WebsiteSpiderServiceImpl" />
</beans>